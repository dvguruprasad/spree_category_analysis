<section>
    <div id="categories">
        <div class="categories_date" ><%= @period %> </div>
        <ul class="group">
            <% for box in @data%>
                <li style="background-color: <%= box.color%>">
            <a href="<%=box.permalink %>">
                <h2><%= box.label %></h2>
                <div class="pro-meter-wrapper">
                    <div class="pro-meter group">
                        <% if box.percent_revenue_difference < 0 %>
                            <span class="down"></span>
                    <% else %>
                            <span class="up"></span>
                    <% end %>
                        <em><%= box.percent_revenue_difference %>%</em>
                    </div>
                </div>
                <ul class="util-bar clearfix">

                    <li class="clearfix"><span  class="left-label">Revenue:</span> <span  class="right-label"><%= box.value%></span> </li>

                    <li class="clearfix"><span  class="left-label">Target:</span> <span  class="right-label"><%= box.total_target%></span> </li>

                    <li class="clearfix"><span  class="left-label">Profit:</span> <span  class="right-label"><%= box.profit%></span> </li>

                </ul>
            </a>
            </li>
        <% end %>
        </ul>
    </div>
</section>
